<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@android:dimen/app_icon_size"
    android:layout_marginTop="@android:dimen/app_icon_size"
    android:background="@drawable/barbergr"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="220dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/Eleven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THE ELEVEN"
            android:fontFamily="@font/thunder_bold"
            android:textColor="@color/black"
            android:textSize="70sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:paddingRight="70dp"
            android:paddingLeft="70dp"
            android:text="Luxury grooming in prestigious Bali barbershop exudes sophistication."
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:text="Log in"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/btnsytle1"
            android:paddingRight="70dp"
            android:paddingLeft="70dp"/>

        <Button
            android:id="@+id/btnregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Register"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:background="@drawable/btn2"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"/>

    </LinearLayout>

  </RelativeLayout>